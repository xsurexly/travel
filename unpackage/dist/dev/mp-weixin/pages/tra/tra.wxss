.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
}
.container .address-box {
  background: #fff;
  padding: 20rpx;
  margin: 20rpx;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}
.container .address-box .address-item {
  padding: 24rpx 0;
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #eee;
}
.container .address-box .address-item:last-child {
  border-bottom: none;
}
.container .address-box .address-item .label {
  color: #666;
  min-width: 80rpx;
}
.container .address-box .address-item .value {
  color: #333;
  flex: 1;
}
.container .control-btns {
  display: flex;
  padding: 20rpx;
  gap: 20rpx;
}
.container .control-btns button {
  flex: 1;
  background: #007AFF;
  color: white;
  border-radius: 8rpx;
}
.container .control-btns button[disabled] {
  background: #cccccc;
}